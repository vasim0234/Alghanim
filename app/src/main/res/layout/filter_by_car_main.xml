<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="5.3dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <ImageView
                android:src="@drawable/car2"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/carImage"
                android:scaleType="fitXY" />
            <View
                android:layout_marginTop="22.7dp"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:id="@+id/view1"
                android:background="#c7c7c7"
                android:layout_gravity="center"
                android:foregroundGravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="95.7dp"
            android:id="@+id/linearLayout2"
            android:paddingHorizontal="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3">
                <TextView
                    android:text="Medium Text"
                    android:textColor="#1a1a1a"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/carModel"
                    android:layout_marginTop="7.6dp"
                    android:layout_marginBottom="9.3dp"
                    android:singleLine="true"
                    app:MvxBind="Text CarModelLabel" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:text="Variant"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="left" />
                    <TextView
                        android:text=":"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="center"
                        android:paddingHorizontal="5dp" />
                    <TextView
                        android:text="variantvalue"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/carVariant"
                        android:layout_gravity="right"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:text="Plate No"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="left" />
                    <TextView
                        android:text=":"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="center"
                        android:paddingHorizontal="5dp" />
                    <TextView
                        android:text="valiantvalue"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/carPlateNum"
                        android:layout_gravity="right"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:text="Year"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="left" />
                    <TextView
                        android:text=":"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:layout_gravity="center"
                        android:paddingHorizontal="5dp" />
                    <TextView
                        android:text="valiantvalue"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/carYear"
                        android:layout_gravity="right"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <Button
                    android:layout_width="19.3dp"
                    android:layout_height="19.3dp"
                    android:id="@+id/btnCarTick"
                    android:layout_marginHorizontal="6.7dp"
                    android:background="#e1e1e1"
                    android:textColor="#ff0000"
                    android:textSize="16.7sp"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4.7dp" />
                <Button
                    android:text="X NOT MY CAR"
                    android:layout_width="130.0dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnNotMyCar"
                    android:background="@drawable/redBorder"
                    android:textColor="#ff0000"
                    android:textSize="13.7sp"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>